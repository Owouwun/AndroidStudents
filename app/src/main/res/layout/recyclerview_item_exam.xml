<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_item_exam">

    <TextView
        android:id="@+id/rvie_textView_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="8"
        android:hint="Наименование"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rvie_textView_mark" />
    <TextView
        android:id="@+id/rvie_textView_mark"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="8"
        android:hint="Оценка"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rvie_textView_name"
        app:layout_constraintEnd_toStartOf="@+id/rvie_textView_date" />
    <TextView
        android:id="@+id/rvie_textView_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="8"
        android:hint="Дата"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rvie_textView_mark"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>